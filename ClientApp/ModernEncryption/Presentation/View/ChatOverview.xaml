<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ModernEncryption.Presentation.View.ChatOverview">

    
    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="Start">
        
        <Label Text="Chatübersicht" FontSize="30" TextColor="White"  BackgroundColor="Green" HorizontalTextAlignment="Center" ></Label>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Text="Neuer Chat"></Button>
            <Button Grid.Column="1" Text="Neue Gruppe"></Button>
        </Grid>

        <SearchBar Placeholder="Chat suchen" HorizontalTextAlignment="Center"></SearchBar>


        <ScrollView  HorizontalOptions="Start" VerticalOptions="Start">
            <StackLayout>
                <Button Text="{Binding Surname }"  FontSize="24"    HorizontalOptions="Start"> </Button>

            </StackLayout>
        </ScrollView>

    </StackLayout>
</ContentPage>