<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ModernEncryption.Presentation.View.RegistrationPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="Center" VerticalOptions="Start">
        <Label Text="Welcome to Modern Encryption" FontSize="45"></Label>
        <Label Text="l" FontSize="10" TextColor="White"></Label>
        <Label Text="Please register." FontSize="20"></Label>

        <Entry Placeholder="Firstname" x:Name="firstname" />
        <Entry Placeholder="Surname" x:Name="surname" />

        <Entry Placeholder="Email" x:Name="eMail">
            <!--<Entry.Behaviors>
                <validator:EmailValidatorBehavior x:Name="emailValidator"/>
            </Entry.Behaviors>-->
        </Entry> 
 
        <Button Text="Send PIN to email address." Command="{Binding SendVoucherCommand}" />
    </StackLayout>
    
</ContentPage>