<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ModernEncryption.Presentation.View.RegistrationPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="Center" VerticalOptions="Start">
        <Label Text="Willkommen bei Modern Encryption" FontSize="45"></Label>
        <Label Text="l" FontSize="10" TextColor="White"></Label>
        <Label Text="Bitte registrieren Sie sich." FontSize="20"></Label>

        <Entry Placeholder="Vorname" x:Name="firstname" />
        <Entry Placeholder="Nachname" x:Name="surname" />
        
        <Entry Placeholder="E-mail" x:Name="eMail" />
 
        <Button Text="PIN an E-Mail-Adresse senden." Command="{Binding SendVoucherCommand}" />
    </StackLayout>
    
</ContentPage>