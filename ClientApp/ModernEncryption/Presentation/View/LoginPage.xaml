<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ModernEncryption.Presentation.View.LoginPage"
             xmlns:local="clr-namespace:ModernEncryption.Utils;assembly=ModernEncryption"
             Title="{Binding Title}"
             xmlns:i18n="clr-namespace:UsingResxLocalization;assembly=UsingResxLocalization">


    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <StackLayout>
            <Label Text="Welcome to" FontSize="45" HorizontalTextAlignment="Center"></Label>

            <Image Source="{local:ImageResource ModernEncryption.logo.png}" Aspect=" AspectFit" HeightRequest ="500" HorizontalOptions="Center"  VerticalOptions="CenterAndExpand" />

            <!-- Logo nur Platzhalter-->
        </StackLayout>
        
        <StackLayout VerticalOptions="Start">
            <Entry IsPassword="true" Placeholder="PIN"/>
            <Button Text="Confirm" TextColor="White"  BorderRadius="15" BackgroundColor="#3A99D8" HorizontalOptions="Center"/>
        </StackLayout>
            

        
    </StackLayout>
    
</ContentPage>