<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ModernEncryption.Presentation.View.VerificationPage">

    <StackLayout HorizontalOptions="Center" VerticalOptions="Start">
        <Label Text="Willkommen bei Modern Encryption" FontSize="45"></Label>
        <Label Text="l" FontSize="10" TextColor="White"></Label>
        <Label Text="Bitte loggen Sie sich ein, um Ihren Account zu verifizieren." FontSize="20"></Label>
        <Entry Placeholder="E-mail"/>
        <Entry IsPassword="true" Placeholder="PIN"/>
        <Button Text="Bestätigen"/>
    </StackLayout>
    
</ContentPage>