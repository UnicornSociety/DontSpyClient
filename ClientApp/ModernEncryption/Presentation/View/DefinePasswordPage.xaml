<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ModernEncryption.Presentation.View.DefinePasswordPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name ="VoucherCode" Placeholder ="Bestätigungscode bitte hier eingeben" />
            <Entry x:Name ="Password1" Placeholder = "Passwort hier eingeben" />
            <Entry x:Name = "Password2" Placeholder = "Passwort erneut eingeben" />
            <Button Text="Bestätigen" Command="{Binding CheckPasswordCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>